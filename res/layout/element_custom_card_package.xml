<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RL_Cards"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp" 
    android:background="#ffffff">

	<ImageView
	    android:id="@+id/button_remember"
	    android:layout_width="70dp"
	    android:layout_height="70dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:src="@drawable/cardsicon" />

	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="70dp"
	    android:layout_alignParentRight="true"
	    android:layout_alignParentTop="true"
	    android:layout_toRightOf="@+id/button_remember"
	    android:background="#0b78a8"
	    android:orientation="vertical" >

		<TextView
		    android:id="@+id/text_view_packageName"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:gravity="left|center_vertical"
		    android:paddingLeft="10dp"
		    android:paddingRight="5dp"
		    android:text="My Package"
		    android:textColor="#FFFFFF"
		    android:textSize="23sp" />

		<TextView
		    android:id="@+id/text_view_cardsCount"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="5dp"
		    android:gravity="left|center_vertical"
		    android:paddingLeft="10dp"
		    android:text="32 Cards"
		    android:textColor="#FFFFFF"
		    android:textSize="17sp" />

	</LinearLayout>

</RelativeLayout>