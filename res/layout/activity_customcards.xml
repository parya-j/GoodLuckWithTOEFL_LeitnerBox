<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    tools:context=".MainActivity"
	    android:orientation="vertical"
	    android:background="#ffffff">
    <TextView
        android:id="@+id/title_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/element_text_title_cards"
        android:gravity="center"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:text="Package Name"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/view_seperator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#223344" />
	<RelativeLayout
	    android:id="@+id/RL_Add_Card"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginBottom="10dp"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp" >

	    <ImageView
	        android:id="@+id/ImageView01"
	        android:layout_width="70dp"
	        android:layout_height="70dp"
	        android:layout_alignParentLeft="true"
	        android:layout_alignParentTop="true"
	        android:src="@drawable/addicon" />

	    <TextView
	        android:id="@+id/text_view_add"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignBottom="@+id/ImageView01"
	        android:layout_alignParentRight="true"
	        android:layout_alignParentTop="true"
	        android:layout_toRightOf="@+id/ImageView01"
	        android:background="#377ad5"
	        android:gravity="left|center_vertical"
	        android:paddingLeft="10dp"
	        android:text="Add a new card"
	        android:textColor="#FFFFFF"
	        android:textSize="25sp" />
	</RelativeLayout>

	<View
	    android:id="@+id/view_seperator"
	    android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="#AABBCC" />

	<ScrollView
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent" >

		<LinearLayout
		    android:id="@+id/LL_custom_cards"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical" >

		</LinearLayout>

	</ScrollView>
</LinearLayout>